@{
    ViewBag.Title = "Upload Excel or CVS";
}

<div style="margin-top:100px">
	@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		@Html.Raw(ViewBag.Error)
		<h2>CSV ,EXCEL Upload Only </h2>
		<h4 style="color:green">*First line of CSV, EXCEL file should be header</h4>
		<h4 style="color:green">*Separator of CSV should be Comma (',') </h4>
		<h4 style="color:green">*The format of JSON will be :</h4>
		<p>[</p>
		<p style="padding-left:5em">&nbsp{</p>
		<p style="padding-left:10em">"header1": "value1",</p>
		<p style="padding-left:10em">&nbsp&nbsp"header2": "value2"</p>
		<p style="padding-left:5em">&nbsp},</p>
		<p style="padding-left:5em">&nbsp{</p>
		<p style="padding-left:10em">&nbsp&nbsp"header1": "value3",</p>
		<p style="padding-left:10em">&nbsp&nbsp"header2": "value4"</p>
		<p style="padding-left:5em">&nbsp}</p>
		<p>]</p>
		<input type="file" name="file" accept=".csv, application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
		<input type="submit" value="Import" />
	}
	@if (ViewBag.success != null)
	{
		<h4 style="color:red">
			@ViewBag.success
		</h4>
	}
</div>